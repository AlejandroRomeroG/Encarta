<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cienciaytecnologia">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La ciencia es el conjunto de conocimientos que se organizan de forma sistemática obtenidos a partir de la observación, experimentaciones y razonamientos dentro de áreas específicas. Es por medio de esta acumulación de conocimientos que se generan hipótesis, cuestionamientos, esquemas, leyes y principios."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La ciencia se encuentra regida por determinados métodos que comprenden una serie de normas y pasos. Gracias a un riguroso y estricto uso de éstos métodos, son validados los razonamientos que se desprenden de los procesos de investigación, dando rigor científico a las conclusiones obtenidas. Es por esto que las conclusiones derivadas de la observación y experimentación científica son verificables y objetivas."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La ciencia se ramifica en lo que se conoce como distintos campos o áreas de conocimiento, donde los distintos especialistas llevan a acabo estudios y observaciones, haciendo uso de los métodos científicos, para alcanzar nuevos conocimientos válidos, certeros, irrefutables y objetivos."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se rige principalmente por el método científico para la obtención de nuevos conocimientos."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Los pasos a seguir en el método cientifico son los siguientes;"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observación"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/observacion" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inducción"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/induccion" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hipótesis"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/hipotesis" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experimentación"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/experimentacion" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conclusiones"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:src="@drawable/conclusiones" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>